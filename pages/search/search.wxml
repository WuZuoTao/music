<!--pages/search/search.wxml-->
<view class="searchContainer">
<!-- 头部搜索区域 -->
<view class="header">
    <view class="searchInput">
    <text class="iconfont icon-prev searchIcon"></text>
    <input type="text" placeholder="{{placeholdContent}}" placeholder-class="placeholder" />
    </view>
    <text class="cancel">搜索</text>
</view>
<!-- 热搜榜 -->
<view class="hotContainer">
    <view class="title">热搜榜</view>
    <!-- 热搜列表 -->
    <view class="hotList">
        <view class="hotItem" wx:for="{{searchHoldList}}" wx:key="score">
            <text class="order">{{index + 1}}</text>
            <text>{{item.searchWord}}</text>
            <image wx:if="{{item.iconUrl}}" src="{{item.iconUrl}}"></image>
        </view>
    </view>
</view>
</view>
