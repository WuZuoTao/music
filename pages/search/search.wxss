/* pages/search/search.wxss */
.searchContainer{
    padding: 0 20rpx;
}
.header{
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 20rpx 0;
}
.header .searchInput{
    position: relative;
    flex: 1;
    border-radius: 30rpx;
    border: 1rpx solid red;
    background: rgba(237, 237, 237, 0.3);
}
.header .cancel{
    width: 100rpx;
    text-align: center;
}
.header .searchIcon{
    position: absolute;
    left: 15rpx;
}
.header .searchInput input{
    margin-left: 60rpx;
    height: 60rpx;
}
.placeholder{
    /* color: red; */
    font-size: 28rpx;
}

/* 热搜榜 */
.hotContainer .title{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #333333;
}
.hotContainer .hotList{
    display: flex;
    flex-wrap: wrap;
}
.hotContainer .hotList .hotItem{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}
.hotContainer .hotList .hotItem .order{
    margin:0 20rpx;
}
.hotContainer .hotList .hotItem image{
    width: 35rpx;
    height: 25rpx;
    margin-left: 10rpx;
}
