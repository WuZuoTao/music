/**index.wxss**/
/* 轮播图CSS */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 导航列表区域 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}
/* 推荐歌曲样式 */
.recommendContainer{
  padding: 20rpx;
}
/* 推荐内容区域 */
.recommendScroll{
  display: flex;
  height: 280rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  display: block;
  font-size: 26rpx;
  /* 单行文本溢出隐藏 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;  /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}
/* 排行榜区域 */
.topListSwiper{
  height: 450rpx;
}
.topList{
  padding: 0 20rpx 20rpx 20rpx;
}
.swiperItem{
  width: 96%;
  background: #FBFBFB;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.swiperItem .musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicItem{
  /* 当一个元素设置为flex，其子元素自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}