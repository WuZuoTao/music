/* pages/recommendSong/recommendSong.wxss */
/* 头部区域 */
.recommendSongContainer .header{
    position: relative;
    width: 100%;
    height: 350rpx;
}
.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}
.recommendSongContainer .header .data{
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;
    color: #ffffff;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.recommendSongContainer .header .data .day{
    font-size: 36rpx;
}
/* 列表区域 */
.listContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #ffffff;
}
.listContainer .listHeader{
    height: 80rpx;
    line-height: 80rpx;
}
.listContainer .listHeader .changeMore{
    float: right;
}
.listScroll{
    height: calc(100vh - 430rpx);
}
.scrollItem{
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .inconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}