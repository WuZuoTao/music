/* pages/video/index.wxss */
/* 头部区域 */
.videoContainer .header{
    display: flex;
}
.videoContainer .header image{
    width: 60rpx;
    height: 60rpx;
}
.videoContainer .header .search{
    border: 1px solid rgb(151, 140, 140);
    margin: 0 20rpx;
    flex: 1;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: red;
    border-radius: 30rpx;
}
/* 导航区域 */
.navScoll{
    display: flex;
    white-space: nowrap;
    height: 70rpx;
}
.navScoll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.navScoll .active{
    border-bottom: 1rpx solid #d43c33;
}
/* 视频区域 */
.videoItem{
    margin: 0 3%;
}
.videoScoll {
    margin-top: 10rpx;
    /* 可以动态的计算css的宽高 */
    /* 视口单位 vh vw 1vh = 1%的视口高度   1vw = 1%的视口宽度 */
    /* calc左右两边必须加空格，否则算法失效 */
    height: calc(100vh - 142rpx);
}
.videoScoll video{
     width: 100%;
     height: 360rpx;
     border-radius: 20rpx;
}
.videoItem .common{
    width: 100%;
    height: 360rpx;
    border-radius: 20rpx;
}


.videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* footer */
  .footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
  }
  .footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
  }
  
  .footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
  }
  
  .footer .comments_praised {
    float: right;
  }
  
  .comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
  }
  
  .comments_praised .btn:after {
    border: none;
  }
  
  .comments_praised .item {
    margin-left: 50rpx;
    position: relative;
  }
  
  .comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
  }
  
  